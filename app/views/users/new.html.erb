<%= form_with model: @user, url: '/users', method: :post, local: true do |f| %>

  <!--User name-->
  <%= f.text_field :name %>

  <!--Friend input field-->
  <%= f.fields_for :friends do |t| %>
    <%= render "users/friend_fields", f: t %>
  <% end %>

  <!--Friend addition button-->
  <%= link_to_add_association "add to", f, :friends %>
<% end %>
